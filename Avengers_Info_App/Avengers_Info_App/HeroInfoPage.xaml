<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Avengers_Info_App.HeroInfoPage"
             NavigationPage.HasNavigationBar="True"
             NavigationPage.HasBackButton="True"
             Title="Hero Info">
    <ContentPage.Content>

        <ScrollView>
            <StackLayout Spacing="10" Margin="20">
                <Image x:Name="thumbnailImg"/>
                <StackLayout Spacing="0">
                    <Label Text="Name: " FontAttributes="Bold"/>
                    <Label x:Name="nameLbl" Margin="20,0,0,0"/>
                </StackLayout>
                <StackLayout Spacing="0">
                    <Label Text="Description: " FontAttributes="Bold"/>
                    <Label x:Name="descriptionLbl" Margin="20,0,0,0"/>
                </StackLayout>
                <StackLayout Spacing="0">
                    <Label Text="Date Modified: " FontAttributes="Bold"/>
                    <Label x:Name="dateLbl" Margin="20,0,0,0"/>
                </StackLayout>
                <StackLayout Spacing="0">
                    <Label Text="Comics: " FontAttributes="Bold"/>
                    <Label x:Name="comicsLbl" Margin="20,0,0,0"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>

    </ContentPage.Content>
</ContentPage>